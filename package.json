{
  "name": "ts-boilerplate",
  "description": "typescript boilerplate",
  "version": "0.0.1",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "start": "tsc && node dist/index.js",
    "build": "tsc -p .",
    "dev": "nodemon"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/index.ts"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash": "^4.14.149",
    "@types/node": "^20.11.4",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "tslint": "^6.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "lodash": "^4.17.15"
  }
}
